<h1>Listing applications</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Description</th>
    <th>Source</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @applications.each do |application| %>
  <tr>
    <td><%= truncate(application.name, :length=>50, :separator=>' ') %></td>
    <td><%= category.name %></td>
    <td><%= simple_format(truncate(application.description, :length=>50, :separator=>' ')) %></td>
    <td><%= application.source %></td>
    <td><%= link_to 'Show', application %></td>
    <td><%= link_to 'Edit', edit_application_path(application) %></td>
    <td><%= link_to 'Destroy', application, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

